{
  "name": "SSO Account Selector",
  "version": "0.0.1",
  "description": "Automatically chooses an account on the Microsoft SSO login page.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "host_permissions": [
    "https://login.microsoftonline.com/*"
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "options.html",
  "manifest_version": 3
}